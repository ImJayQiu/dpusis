
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

	<div class="login-box-body">
	<div class="row">
		<!-- /.col -->
		<div class="col-xs-12">
			<h3><%= t('change_password')%></h3>
		</div>
		<!-- /.col -->
	</div>


	<%= devise_error_messages! %>

	<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
		<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
<% end %>

	<div class="form-group has-feedback">
		<%= f.password_field :password, autocomplete: "off", placeholder: "请输入新密码 | New Password", class: "form-control" %>
		<span class="glyphicon glyphicon-lock form-control-feedback"></span>
	</div>

	<div class="form-group has-feedback">
		<%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "请确认新密码 | New Password Confirm", class: "form-control"  %>
		<span class="glyphicon glyphicon-lock form-control-feedback"></span>
	</div>

	<div class="form-group has-feedback">
		<%= f.password_field :current_password, autocomplete: "off", placeholder: "请输入当前使用的密码 | Current Password", class: "form-control"  %>
		<span class="glyphicon glyphicon-lock form-control-feedback"></span>
	</div>

	<div class="row">
		<!-- /.col -->
		<div class="col-xs-12">
			<%= f.submit t("change_password"), class: "btn btn-primary btn-block btn-flat" %>
		</div>
		<!-- /.col -->
	</div>

</div>
<% end %>


