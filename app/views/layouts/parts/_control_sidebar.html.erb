<aside class="control-sidebar control-sidebar-dark">
	<!-- Create the tabs -->
	<ul class="nav nav-tabs nav-justified control-sidebar-tabs">
		<li class="active">
		<a href="#control-sidebar-home-tab" data-toggle="tab"><i class="fa fa-gears"></i></a>
		</li>
		<!--li><a href="#control-sidebar-settings-tab" data-toggle="tab"><i class="fa fa-gears"></i></a></li-->
	</ul>
	<!-- Tab panes -->
	<div class="tab-content">
		<!-- Home tab content -->
		<div class="tab-pane active" id="control-sidebar-home-tab">
			<h3 class="control-sidebar-heading">语言选择<br>Select Language</h3>

			<ul class="control-sidebar-menu">

				<li>
				<%= link_to :controller => controller_name, :action => action_name, :locale => "zh-CN" do %>
					<i class="menu-icon fa fa-font-awesome bg-red"></i>
				<div class="menu-info">
					<h4 class="control-sidebar-subheading">
						简体中文 | Chinese
					</h4>
					<p>将系统界面切换为中文</p>
				</div>
			<% end %>
				</li>

				<li>
				<%= link_to :controller => controller_name, :action => action_name, :locale => "en" do %>
					<i class="menu-icon fa fa-font-awesome bg-red"></i>
				<div class="menu-info">
					<h4 class="control-sidebar-subheading">
						英文 | English
					</h4>
					<p>English Interface</p>
				</div>
			<% end %>
				</li>
			</ul>
			<!-- /.control-sidebar-menu -->

	</div>
</aside>
