
<h3><%= t('coutline_management')%> - <%= t('Show_record')%></h3>

<p id="notice"><%= notice %></p>


<% if can? :view, Coutline%>

	<section class="content">
	<div class="row">

		<!-- column -->
		<div class="col-md-6">
			<!-- general form elements -->
			<div class="box box-primary">
				<div class="box-header with-border">
					<h3 class="box-title">
						<%= t('coutline_management')%>
					</h3>
				</div>
				<!-- /.box-header -->
				<!-- form start -->
				<div class="box-body">

					<div class="form-group">
						<%= t('Ccode') %>:
						<%= @coutline.code %>
					</div>

					<div class="form-group">
						<%= t('Cename') %>:
						<%= @coutline.ename %>
					</div>

					<div class="form-group">
						<%= t('Cname') %>:
						<%= @coutline.name %>
					</div>

				</div>
				<!-- end form start -->
			</div>
		</div>
		<!-- end column -->

		<!-- column -->
		<div class="col-md-6">
			<!-- general form elements -->
			<div class="box box-primary">
				<div class="box-header with-border">
					<h3 class="box-title">
					</h3>
				</div>
				<!-- /.box-header -->
				<!-- form start -->
				<div class="box-body">

					<div class="form-group">
						<%= t('Major') %>:
						<%= @coutline.major %>
					</div>

					<div class="form-group">
						<%= t('Ctype') %>:
						<%= @coutline.ctype %>
					</div>

				</div>
				<!-- end form start -->
			</div>
		</div>
		<!-- column -->

		<!-- long column -->
		<div class="col-md-12">
			<!-- general form elements -->
			<div class="box box-primary">
				<div class="box-header with-border">
					<h3 class="box-title"><%= t('Cdes')%></h3>
				</div>
				<!-- /.box-header -->
				<!-- body box  -->
				<div class="box-body">
					<div class="form-group">
						<%= @coutline.des %>
					</div>
				</div>
				<!-- end body box  -->
			</div>
		</div>
		<!-- end long column -->



		<!-- long column -->
		<div class="col-md-12">
			<!-- general form elements -->
			<div class="box box-primary">
				<div class="box-header with-border">
					<h3 class="box-title"><%= t('Operations')%></h3>
				</div>
				<!-- /.box-header -->
				<!-- body box  -->
				<div class="box-body">
					<div class="form-group">
						<table class="table text-center">
							<tbody>
							<tr>
								<td>
									<%= button_to t('Edit'), edit_coutline_path(@coutline), method: "get" %>
								</td>
								<td>
									<%= button_to t('coutline_management'), coutlines_path, method: "get" %>
								</td>
								<td>
									<%= button_to t('back_landing'), root_path, method: "get" %>
								</td>
							</tr>
							</tbody>
						</table>
					</div>
				</div>
				<!-- end body box  -->
			</div>
		</div>
		<!-- end long column -->

	</div>


</div><!-- end class row -->
</section>

<% else %>

<%= t('permission_denied') %>

<% end # if can? :show, Visa%>
