
<section class="content">
	<!-- final column -->
	<div class="col-md-12">
		<!-- general form elements -->
		<%= form_tag imported_ustatuses_path, multipart: true do %>
			<div class="box box-primary">
			<div class="box-header with-border">
				<h3 class="box-title"><%= t('ustatus_management')%></h3>
			</div>
			<!-- /.box-header -->

			<% if can? :create, :ustatus %>

				<div class="box-body">
				<div class="form-group">
					<table class="table text-center">
						<tr>
							<td>
								<%= t("select_import_file")%>:
							</td>
							<td>
								<%= file_field_tag :file, required: true %>
							</td>
							<td>
								<%= submit_tag t("Import") %>
							<% end %>
							</td>
						</tr>
					</table>
				</div>
			</div>

			<% end # if can? :create, :ustatus %>

		</div>
	</div>

	<!-- final column -->
	<div class="col-md-12">
		<!-- general form elements -->
		<div class="box box-primary">
			<div class="box-header with-border">
				<h3 class="box-title"><%= t('csv_example')%></h3>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<div class="form-group">
					<table class="table text-center">
						<tr>
							<td>code</td>
							<td>date</td>
							<td>status</td>
						</tr>
						<tr>
							<td>Student002</td>
							<td>2016/09/21</td>
							<td>退学</td>
						</tr>
						<tr>
							<td>Student004</td>
							<td>2016/09/21</td>
							<td>休学</td>
						</tr>
						<tr>
							<td>Staff013</td>
							<td>2016-09-21</td>
							<td>产假</td>
						</tr>
						<tr>
							<td>Lecturer023</td>
							<td>2016-09-21</td>
							<td>离职</td>
						</tr>
						<tr>
							<td>.<br>.<br>.</td>
							<td>.<br>.<br>.</td>
						</tr>
						<tr>
							<td><%= t('Code') %></td>
							<td><%= t('Date') %></td>
							<td><%= t('Status') %></td>
						</tr>
					</table>
				</div>
			</div>
		</div>
		<ul>
			<li/>Microsoft Office Excel, Open Office Calc 及 Google Docs 等均支持另存为 CSV 文件
			<li/>请保持第一行的栏位和内容固定不变(包括字母大小写)，最后一行为各栏位的数据说明无需添加进文件中
			<li/>日期栏位请严格遵守 年/月/日（yyyy/mm/dd） 或者 年-月-日(yyyy-mm-dd) 的写法
		</ul>
	</div>


	<!-- final column -->
	<div class="col-md-12">
		<!-- general form elements -->
		<div class="box box-primary">
			<div class="box-header with-border">
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<div class="form-group">
					<table class="table text-center">
						<tr>
							<td>
								<%= button_to t('ustatus_management'), ustatuses_path, method: "get" %>
							</td>

							<td>
								<%= button_to t('back_landing'), root_path, method: "get" %>
							</td>
						</tr>
					</table>
				</div>
			</div>
		</div>
	</div>
	<!-- end column  -->



</section>
