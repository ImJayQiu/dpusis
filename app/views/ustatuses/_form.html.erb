<%= form_for(@ustatus) do |f| %>
	<% if @ustatus.errors.any? %>
	<div id="error_explanation">
	<h2><%= pluralize(@ustatus.errors.count, "error") %> prohibited this user from being saved:</h2>

	<ul>
		<% @ustatus.errors.full_messages.each do |message| %>
			<li><%= message %></li>
	<% end %>
	</ul>
</div>
  <% end %>


<section class="content">
	<div class="row">
		<!-- left column -->
		<div class="col-md-6">
			<!-- general form elements -->
			<div class="box box-primary">
				<div class="box-header with-border">
					<h3 class="box-title"><%= t('visa_management')%></h3>
				</div>
				<!-- /.box-header -->
				<!-- form start -->
				<div class="box-body">
					<div class="form-group">
						<%= f.label t('Code') %>
						<%= f.text_field :code, class: 'form-control', required: true %>
					</div>

					<div class="form-group">
						<%= f.label t('Date') %>
						<%= f.text_field :date, class: 'form-control' , required: true, id: "datepicker" %>
					</div>

					<div class="form-group">
						<%= f.label t('Status') %>
						<%= f.select :status, A::STATUS, class: 'form-control' , required: true%>
					</div>
				</div>
			</div>
		</div>

		<!-- final column -->
		<div class="col-md-12">
			<!-- general form elements -->
			<div class="box box-primary">
				<div class="box-header with-border">
					<h3 class="box-title"><%= t('Operations')%></h3>
				</div>
				<!-- /.box-header -->
				<div class="box-body">
					<div class="form-group">
						<table class="table text-center">
							<tr>
								<td>
									<%= f.submit t('Submit') %>
								<% end %>
								</td>
								<td>
									<%= button_to t('ustatus_management'), ustatuses_path, method: "get" %>
								</td>
								<td>
									<%= button_to t('back_landing'), root_path, method: "get" %>
								</td>
							</tr>
						</table>
					</div>
				</div>
			</div>
		</div>






	</div>

</div><!-- end class row -->
</section>

