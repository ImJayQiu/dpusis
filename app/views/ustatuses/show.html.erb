<h3><%= t('ustatus_management') %> - <%= t('Show_record') %></h3>

<p id="notice"><%= notice %></p>
<% if @user.nil? %>
	<section class="content">
	<div class="row">
		<!-- left column -->
		<div class="col-md-6">
			<!-- general form elements -->
			<div class="box box-primary">
				<div class="box-header with-border">
					<h3 class="box-title">
						<%= t('ustatus_management')%>
					</h3>
				</div>
				<!-- /.box-header -->
				<!-- form start -->
				<!--form role="form" -->
				<div class="box-body">

					<div class="form-group">
						<%= t('Code') %>:
						<%= @ustatus.code %>
					</div>
					<div class="form-group">
						<%= t('Date') %>:
						<%= @ustatus.date %>
					</div>
					<div class="form-group">
						<%= t('Status') %>:
						<%= @ustatus.status %>
					</div>

					<div class="form-group">
						<%= t('idle_code') %>
					</div>

				</div>
				<!-- /form -->
			</div>
		</div>

	</section>


<% else %>

		<section class="content">
		<div class="row">
			<!-- left column -->
			<div class="col-md-6">
				<!-- general form elements -->
				<div class="box box-primary">
					<div class="box-header with-border">
						<h3 class="box-title">
							<%= image_tag @user.avatar.url(:thumb) %>
							<%= t('ustatus_management')%>
							<%= t('Status')%> | <%= @ustatus.status %> | <%= @ustatus.date %>
						</h3>
					</div>
					<!-- /.box-header -->
					<!-- form start -->
					<!--form role="form" -->
					<div class="box-body">

						<div class="form-group">
							<%= t('Code') %>: 
							<%= @user.code %>
						</div>
						<div class="form-group">
							<%= t('Ename') %>: 
							<%= @user.ename %>
						</div>
						<div class="form-group">
							<%= t('Name') %>: 
							<%= @user.name %>
						</div>
						<div class="form-group">
							<%= t('Gender') %>:
							<%= @user.gender %>
						</div>
						<div class="form-group">
							<%= t('Birthday') %>:
							<%= @user.birthday %>
						</div>
						<div class="form-group">
							<%= t('Major') %>:
							<%= @user.major %>
						</div>
						<div class="form-group">
							<%= t('Role') %>:
							<%= @user.role %>
						</div>


					</div>
					<!-- /form -->
				</div>
			</div>

			<!-- right column -->
			<div class="col-md-6">
				<!-- general form elements -->
				<div class="box box-primary">
					<div class="box-header with-border">
						<h3 class="box-title"><%= t('contact_info')%></h3>
					</div>
					<!-- /.box-header -->
					<!-- form start -->
					<!-- form role="form" -->
					<div class="box-body">

						<div class="form-group">
							<%= t('Country') %>:
							<%= @user.country %>
						</div>
						<div class="form-group">
							<%= t('Province') %>:
							<%= @user.province %>
						</div>
						<div class="form-group">
							<%= t('City') %>:
							<%= @user.city %>
						</div>
						<div class="form-group">
							<%= t('Address') %>:
							<%= @user.address %>
						</div>
						<div class="form-group">
							<%= t('Phone') %>:
							<%= @user.phone %>
						</div>
						<div class="form-group">
							<%= t('Passport') %>:
							<%= @user.passport %>
						</div>

					</div>
					<!-- /form -->
				</div>
			</div>

			<% end #end if user.nil? %>

			<!-- final column -->
			<div class="col-md-12">
				<!-- general form elements -->
				<div class="box box-primary">
					<div class="box-header with-border">
						<h3 class="box-title"><%= t('Operations')%></h3>
					</div>
					<!-- /.box-header -->
					<div class="box-body">
						<div class="form-group">
							<table class="table text-center">
								<tbody>
								<tr>
									<td>
										<%= button_to t('Edit'), edit_ustatus_path(@ustatus), method: "get" %>
									</td>
									<td>
										<%= button_to t('ustatus_management'), ustatuses_path, method: "get" %>
									</td>
									<td>
										<%= button_to t('back_landing'), root_path, method: "get" %>
									</td>
								</tr>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>

		</div>

	</div><!-- end class row -->
</section>


