<%= form_for(@major) do |f| %>
	<% if @major.errors.any? %>
	<div id="error_explanation">
	<h2><%= pluralize(@major.errors.count, "error") %> prohibited this user from being saved:</h2>

	<ul>
		<% @major.errors.full_messages.each do |message| %>
			<li><%= message %></li>
	<% end %>
	</ul>
</div>
  <% end %>


<section class="content">
	<div class="row">

		<!--  column -->
		<div class="col-md-6">
			<!-- general form elements -->
			<div class="box box-primary">
				<div class="box-header with-border">
					<h3 class="box-title"><%= t('semester_management')%></h3>
				</div>
				<!-- /.box-header -->
				<!-- form start -->
				<div class="box-body">
					<div class="form-group">
						<%= f.label t('major_code') %>
						<%= f.text_field :code, class: 'form-control', required: true %>
					</div>
					<div class="form-group">
						<%= f.label t('Remark') %>
						<%= f.text_area :remark, class: 'form-control' %>
					</div>
				</div>
				<!-- form start -->
			</div>
		</div>
		<!-- column end -->

		<!--  column -->
		<div class="col-md-6">
			<!-- general form elements -->
			<div class="box box-primary">
				<div class="box-header with-border">
					<h3 class="box-title"><%= t('semester_management')%></h3>
				</div>
				<!-- /.box-header -->
				<!-- form start -->
				<div class="box-body">
					<div class="form-group">
						<%= f.label t('major_name') %>
						<%= f.text_field :name, class: 'form-control', required: true %>
					</div>
					<div class="form-group">
						<%= f.label t('major_ename') %>
						<%= f.text_field :ename, class: 'form-control' %>
					</div>
				</div>
				<!-- form start -->
			</div>
		</div>
		<!-- column end -->

		<!-- final column -->
		<div class="col-md-12">
			<!-- general form elements -->
			<div class="box box-primary">
				<div class="box-header with-border">
					<h3 class="box-title"><%= t('Operations')%></h3>
				</div>
				<!-- /.box-header -->
				<div class="box-body">
					<div class="form-group">
						<table class="table text-center">
							<tr>
								<td>
									<%= f.submit t('Submit') %>
								<% end %>
								</td>
								<td>
									<%= button_to t('major_management'), majors_path, method: "get" %>
								</td>

								<td>
									<%= button_to t('back_landing'), root_path, method: "get" %>
								</td>
							</tr>
						</table>
					</div>
				</div>
			</div>
		</div>




	</div>

</div><!-- end class row -->
</section>

