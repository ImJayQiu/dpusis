
<% if can? :import, :user %>

	<section class="content">
	<!-- final column -->
	<div class="col-md-12">
		<!-- general form elements -->
		<div class="box box-primary">
			<div class="box-header with-border">
				<h3 class="box-title"><%= t('Import_users')%></h3>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<div class="form-group">
					Message: <%= @message %><br/>
					Status: <%= @import_status %>
			</div>
				<div class="form-group">
					导入结果 | Data Import Result : 
					<% if @report == "false" %>
						系统检测到某些数据有误，请仔细核查后再重新导入！
					Some errors found ! Please import again after checking !  
				<% else %>
						所有记录已全部成功导入！
					All records have been imported successfully !  
					<% end if @report == "false" %>
				</div>
				<div class="form-group">
					<table class='table text-left'>
						<tr>
							<th><%= t('Code') %></th>
							<th colspan='10'><%= t('Error') %></th>
						</tr>
						<% @error.each do |e| %>
							<tr>
							<td><%= e.to_a[0].code %></td>
							<td>
								<ul>
									<% e.to_a[1].to_h.each do |k| %>
										<li><%= k[0] %>: <%= k[1] %></li>
								<% end %>
								</ul>
							</td>
						</tr>
					<% end %>
					</table>
				</div>

			</div>
		</div>
	</div>


	<!-- final column -->
	<div class="col-md-12">
		<!-- general form elements -->
		<div class="box box-primary">
			<div class="box-header with-border">
				<h3 class="box-title"><%= t('Operations')%></h3>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<div class="form-group">
					<table class="table text-center">
						<tr>
							<td>
								<%= button_to t('Back'), import_users_path, method: "get" %>
							</td>
							<% if can? :list, :students %>
								<td>
								<%= button_to t('Students_management'), students_users_path, method: "get" %>
							</td>
							<% end # if can? :list, :students %>
							<% if can? :list, :lecturers %>
								<td>
								<%= button_to t('Lecturers_management'), lecturers_users_path, method: "get" %>
							</td>
							<% end # if can? :list, :lecturers %>
							<% if can? :list, :deans %>
								<td>
								<%= button_to t('Deans_management'), deans_users_path, method: "get" %>
							</td>
							<% end # if can? :list, :deans %>
							<td>
								<%= button_to t('back_landing'), root_path, method: "get" %>
							</td>
						</tr>
					</table>
				</div>
			</div>
		</div>
	</div>
	<!-- end column  -->


</section>

<% else %>
	<%= t('permission_denied') %>
<% end # if can? :import, :user %>
