<% if can? :import, :user %>
	<section class="content">
	<!-- final column -->
	<div class="col-md-12">
		<!-- general form elements -->
		<%= form_tag imported_users_path, multipart: true do %>
			<div class="box box-primary">
			<div class="box-header with-border">
				<h3 class="box-title"><%= t('Import_users')%></h3>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<div class="form-group">
					<table class="table text-center">
						<tr>
							<td>
								<%= t("select_import_file")%>:
							</td>
							<td>
								<%= file_field_tag :file, required: true %>
							</td>
							<td>
								<%= submit_tag t("Import") %>
							<% end %>
							</td>
						</tr>
					</table>
				</div>
			</div>
		</div>
	</div>

	<!-- final column -->
	<div class="col-md-12">
		<!-- general form elements -->
		<div class="box box-primary">
			<div class="box-header with-border">
				<h3 class="box-title"><%= t('csv_example')%></h3>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<div class="form-group">
					<table class="table text-center">
						<tr>
							<td>code</td>
							<td>name</td>
							<td>gender</td>
							<td>major</td>
							<td>enroll</td>
							<td>passport</td>
							<td>role</td>
						</tr>
						<tr>
							<td>s0001</td>
							<td>奥巴马</td>
							<td>男</td>
							<td>国际贸易</td>
							<td>2016/09/21</td>
							<td>G12345678</td>
							<td>Student</td>
						</tr>
						<tr>
							<td>s0002</td>
							<td>华盛顿</td>
							<td>男</td>
							<td>旅游管理</td>
							<td>2016/09/21</td>
							<td>G23456789</td>
							<td>Student</td>
						</tr>
						<tr>
							<td>l0002</td>
							<td>爱心斯坦</td>
							<td>女</td>
							<td>金融会计</td>
							<td>2016/09/21</td>
							<td>G34567890</td>
							<td>Lecturer</td>
						</tr>
						<tr>
							<td>l0013</td>
							<td>达尔文</td>
							<td>女</td>
							<td>旅游管理</td>
							<td>2016/09/21</td>
							<td>G45678901</td>
							<td>Lecturer</td>
						</tr>
						<tr>
							<td>.<br>.<br>.</td>
							<td>.<br>.<br>.</td>
							<td>.<br>.<br>.</td>
							<td>.<br>.<br>.</td>
							<td>.<br>.<br>.</td>
							<td>.<br>.<br>.</td>
							<td>.<br>.<br>.</td>
							<td>.<br>.<br>.</td>
							<td>.<br>.<br>.</td>
						</tr>
						<tr>
							<td><%= t('Code') %></td>
							<td><%= t('Name') %></td>
							<td><%= t('Gender') %></td>
							<td><%= t('Major') %></td>
							<td><%= t('enroll_date') %></td>
							<td><%= t('Passport') %></td>
							<td><%= t('Role') %></td>
						</tr>
					</table>
				</div>
			</div>
		</div>
		<ul>
			<li/>Microsoft Office Excel, Open Office Calc 及 Google Docs 等均支持另存为 CSV 文件
			<li/>请保持第一行的栏位和内容固定不变(包括字母大小写)，最后一行为各栏位的数据说明无需添加进文件中
			<li/>用户组栏位请严格遵守首字母大写的写法, "Student"代表学生，"Lecturer"代表讲师
			<li/>日期栏位请严格遵守 年/月/日（yyyy/mm/dd） 或者 年-月-日(yyyy-mm-dd) 的写法
		</ul>
	</div>



	<!-- final column -->
	<div class="col-md-12">
		<!-- general form elements -->
		<div class="box box-primary">
			<div class="box-header with-border">
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<div class="form-group">
					<table class="table text-center">
						<tr>
							<% if can? :list, :students %>
								<td>
								<%= button_to t('Students_management'), students_users_path, method: "get" %>
							</td>
							<% end # if can? :list, :students %>
							<% if can? :list, :lecturers %>
								<td>
								<%= button_to t('Lecturers_management'), lecturers_users_path, method: "get" %>
							</td>
							<% end # if can? :list, :lecturers %>
							<% if can? :list, :deans %>
								<td>
								<%= button_to t('Deans_management'), deans_users_path, method: "get" %>
							</td>
							<% end # if can? :list, :deans %>
							<td>
								<%= button_to t('back_landing'), root_path, method: "get" %>
							</td>
						</tr>
					</table>
				</div>
			</div>
		</div>
	</div>


</section>
<% else %>
	<%= t('permission_denied') %>
<% end # if can? :create, :user %>
