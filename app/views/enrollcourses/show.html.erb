<h3><%= t('enrollcourses_management')%> - <%= t('Show_record')%></h3>

<p id="notice"><%= notice %></p>

<% if can? :view, Enrollcourse %>

	<% if @class.nil? %>
	<section class="content">
	<div class="row">
		<!-- left column -->
		<div class="col-md-6">
			<!-- general form elements -->
			<div class="box box-primary">
				<div class="box-header with-border">
					<h3 class="box-title">
						<%= t('enrollcourses_management')%>
					</h3>
				</div>
				<!-- /.box-header -->
				<!-- form start -->
				<!--form role="form" -->
				<div class="box-body">

					<div class="form-group">
						<%= t('student_code') %>:
						<%= @enrollcourse.code %>
					</div>
					<div class="form-group">
						<%= t('cc_code') %>:
						<%= @enrollcourse.ccode %>
					</div>
					<div class="form-group">
						<%= t('idle_class') %>
					</div>

				</div>
				<!-- /form -->
			</div>
		</div>

	</section>


<% else %>

		<section class="content">
		<div class="row">
			<!-- left column -->
			<div class="col-md-6">
				<!-- general form elements -->
				<div class="box box-primary">
					<div class="box-header with-border">
						<h3 class="box-title">
							<%= t('enrollcourses_management')%>
						</h3>
					</div>
					<!-- /.box-header -->
					<!-- form start -->
					<!--form role="form" -->
					<div class="box-body">

						<div class="form-group">
							<%= t('Code') %>: 
							<%= @user.code %>
						</div>
						<div class="form-group">
							<%= t('Name') %>: 
							<%= @user.name %>
						</div>
						<div class="form-group">
							<%= t('Gender') %>:
							<%= @user.gender %>
						</div>
						<div class="form-group">
							<%= t('Birthday') %>:
							<%= @user.birthday %>
						</div>
						<div class="form-group">
							<%= t('Major') %>:
							<%= @user.major %>
						</div>
						<div class="form-group">
							<%= t('Role') %>:
							<%= @user.role %>
						</div>


					</div>
					<!-- /form -->
				</div>
			</div>

			<!-- right column -->
			<div class="col-md-6">
				<!-- general form elements -->
				<div class="box box-primary">
					<div class="box-header with-border">
						<h3 class="box-title"><%= t('contact_info')%></h3>
					</div>
					<!-- /.box-header -->
					<!-- form start -->
					<!-- form role="form" -->
					<div class="box-body">

						<div class="form-group">
							<%= t('c_code') %>:
							<%= @class.code %>
						</div>
						<div class="form-group">
							<%= t('Cname') %>:
							<%= @class.c_code %>
						</div>
						<div class="form-group">
							<%= t('cweekday') %>:
							<%= @class.weekday %>
						</div>
						<div class="form-group">
							<%= t('cstime') %>:
							<%= @class.stime %>
						</div>
						<div class="form-group">
							<%= t('cetime') %>:
							<%= @class.etime %>
						</div>

					</div>
					<!-- /form -->
				</div>
			</div>

			<% end #end if user.nil? %>

			<!-- final column -->
			<div class="col-md-12">
				<!-- general form elements -->
				<div class="box box-primary">
					<div class="box-header with-border">
						<h3 class="box-title"><%= t('Operations')%></h3>
					</div>
					<!-- /.box-header -->
					<div class="box-body">
						<div class="form-group">
							<table class="table text-center">
								<tbody>
								<tr>
									<td>
										<%= button_to t('Edit'), edit_enrollcourse_path(@enrollcourse), method: "get" %>
									</td>
									<td>
										<%= button_to t('enrollcourses_management'), enrollcourses_path, method: "get" %>
									</td>
									<td>
										<%= button_to t('back_landing'), root_path, method: "get" %>
									</td>
								</tr>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>

		</div>

	</div><!-- end class row -->
</section>

<% else %>

	<%= t('permission_denied') %>

<% end # if can? :show, Enrollcourse %>
